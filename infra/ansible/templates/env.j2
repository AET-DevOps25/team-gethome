# =================================================================
# GetHome Application Environment Variables
# =================================================================
# Generated automatically by Ansible deployment
# DO NOT EDIT THIS FILE MANUALLY - IT WILL BE OVERWRITTEN

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# MongoDB connection string - using Docker service name 'mongo'
MONGODB_URI=mongodb://root:{{ gethome_mongo_root_password }}@mongo:27017/gethome?authSource=admin

# =================================================================
# JWT SECURITY CONFIGURATION
# =================================================================
JWT_SECRET={{ gethome_jwt_secret }}
JWT_EXPIRATION=86400000
JWT_ALGORITHM=HS256

# =================================================================
# EMAIL CONFIGURATION (Gmail SMTP)
# =================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME={{ gethome_email_username }}
EMAIL_PASSWORD={{ gethome_email_password }}

# =================================================================
# TWILIO SMS CONFIGURATION
# =================================================================
TWILIO_ACCOUNT_SID={{ gethome_twilio_account_sid }}
TWILIO_AUTH_TOKEN={{ gethome_twilio_auth_token }}
TWILIO_PHONE_NUMBER={{ gethome_twilio_phone_number }}

# =================================================================
# OPENAI API CONFIGURATION
# =================================================================
OPENAI_API_KEY={{ gethome_openai_api_key }}

# =================================================================
# OPENROUTE SERVICE CONFIGURATION
# =================================================================
OPENROUTE_API_URL=https://api.openrouteservice.org/v2
OPENROUTE_API_KEY={{ gethome_openroute_api_key }}

# =================================================================
# SERVICE DISCOVERY CONFIGURATION
# =================================================================
# URLs for inter-service communication in Docker environment
SERVICE_AUTH_URL=http://auth-service:8080
SERVICE_USERMANAGEMENT_URL=http://usermanagement-service:8080
SERVICE_MESSAGE_URL=http://message-service:8080
SERVICE_ROUTING_URL=http://routing-service:8080
SERVICE_AI_URL=http://ai-service:80

# =================================================================
# FRONTEND CONFIGURATION
# =================================================================
# External URL for frontend access
FRONTEND_URL=http://{{ ansible_host }}:3000

# =================================================================
# SPRING PROFILES
# =================================================================
SPRING_PROFILES_ACTIVE=production

# =================================================================
# LOGGING CONFIGURATION
# =================================================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG

# =================================================================
# MONGODB ROOT CREDENTIALS (for docker-compose)
# =================================================================
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD={{ gethome_mongo_root_password }}
MONGO_DATABASE=gethome 